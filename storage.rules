rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to hairstyle templates (root level)
    match /{fileName} {
      allow read: if fileName.matches('.*\\.(png|jpg|jpeg)$'); // Allow read for image files
    }
    
    // Allow public read access to hairstyle templates (in hairstyles folder)
    match /hairstyles/{fileName} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can upload templates
    }
    
    // Allow users to read their own generated images
    match /generated/{userId}/{fileName} {
      allow read: if true; // Public read for generated images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin access for all files (if needed in future)
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
                           request.auth.token.admin == true;
    }
  }
}
